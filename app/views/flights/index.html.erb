<ul>
  <% @flights.each do |flight| %>
    <li id='flights-<%= flight.id %>'><%= flight.number %> - <%= flight.airline.name %><br>
      <ul>
      <% flight.passengers.each do |passenger| %>
        <li id='passengers-<%= passenger.id %>'><%= passenger.name %></li>
      <% end %>
    </ul>
    </li>
  <% end %>
</ul>
